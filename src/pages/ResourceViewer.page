<apex:page controller="ResourceViewerController" docType="html-5.0" sidebar="false" showHeader="false" standardStylesheets="true" cache="false" title="{!$Label.ALMS_Resource_Redirect_Title}">

    <apex:pageMessages />
    <apex:pageMessage summary="{!$Label.ALMS_Resource_Redirect}" severity="info" strength="1" />

    <apex:outputPanel layout="none" rendered="{!retURL != null}">
        <div style="width:100%;text-align:center;padding:10px 0;">
            <a href="javascript:almond.redirectHandler('{!JSENCODE(retURL)}',false)">{!$Label.ALMS_Back_To_Previous_Page}</a>
        </div>
    </apex:outputPanel>

    <apex:includeScript value="{!URLFOR($Resource.almond_uilib, '/js/jquery.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.almond_uilib, '/js/almondutils.js')}"/>

    <apex:outputPanel layout="none" rendered="{!continueRedirection}">
        <script>
            jQuery(document).ready(function(){
                Visualforce.remoting.Manager.invokeAction(
                    '{!$RemoteAction.ResourceViewerController.redirectToResource}',
                    '{!JSENCODE($CurrentPage.parameters.aid)}',
                    function(result, event){
                        if (event.status) {
                            var decodedURL = result.replace(/&amp\;/g, '&');
                            almond.redirectHandler(decodedURL,false);
                        } else if (event.type === 'exception') {
                            alert(event.message);
                        } else {
                            alert(event.message);
                        }
                    }
                );
            });
        </script>
    </apex:outputPanel>

</apex:page>
